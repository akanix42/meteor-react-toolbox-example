{
  "name": "react-toolbox-test",
  "private": true,
  "scripts": {
    "start": "meteor run"
  },
  "dependencies": {
    "meteor-node-stubs": "~0.2.0",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-toolbox": "^0.14.2"
  },
  "cssModules": {
    "extensions": [
      "scss",
      "css"
    ],
    "globalVariables": [
      "node_modules/react-toolbox/lib/_colors.scss",
      { "theme-building": true },
      "client/toolbox-theme.scss"
    ],
    "jsClassNamingConvention": {
      "camelCase": true
    },
    "cssClassNamingConvention": {
      "replacements": [
        "_client",
        ["t", "b"],
        ["e", "g", "a"]
      ]
    },
    "outputJsFilePath": {
      ".*node_modules/react-toolbox/.*": "{dirname}/{basename}"
    },
    "passthroughPaths": [
      "bootstrap.css"
    ]
  },
  "devDependencies": {
    "node-sass": "^3.4.2"
  }
}
